<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.example.todolist.fragment.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list" >
        <argument
            android:name="scroll_all_way_down"
            app:argType="boolean"
            android:defaultValue="false"/>
        <action
            android:id="@+id/action_todoListFragment_to_editItemFragment"
            app:destination="@id/editItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/editItemFragment"
        android:name="com.example.todolist.fragment.EditItemFragment"
        android:label="fragment_edit_item"
        tools:layout="@layout/fragment_edit_item" >
        <argument
            android:name="add_new_item"
            app:argType="boolean"
            android:defaultValue="true"/>
        <argument
            android:name="item_id"
            app:argType="integer"
            android:defaultValue="-1"/>
        <action
            android:id="@+id/action_editItemFragment_to_todoListFragment"
            app:destination="@id/todoListFragment"
            app:popUpTo="@id/todoListFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>